<h1>All Transactions</h1>

<% @transactions.each do |transaction| %>
  <p><%= transaction.day %> | <%= transaction.business['name'] %> | <%= transaction.supplier %> | <%= transaction.category['label'] %> | £<%= transaction.price; %></p>
  <form action='/transactions/<%= transaction.id %>/delete' method='post'>
    <input type="submit" value="Delete">
  </form>
<% end %>

<p>Total £<%= @analysis.total_transactions %></p>